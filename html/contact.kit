<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forest Group</title>
    <!-- @include 'styles.kit' -->
</head>

<body>
    <!-- @includes 'otherPagesHeader.kit' -->

    <main>
        <section class="contact section-padding" id="contact">
            <div class="wrapper">
                <h2 class="section-heading">kontakt</h2>
                <div class="contact__box">
                    <form class="contact__form">
                        <h3 class="contact__form-title title">Skontaktuj się z nami <i
                                class="fa-regular fa-envelope"></i></h3>
                        <div class="contact__form-box">
                            <input type="text" class="contact__form-input" id="name">
                            <label for="name" class="contact__form-label ">Imię i nazwisko:</label>
                            <p class="contact__form-error"></p>
                        </div>
                        <div class="contact__form-box">
                            <input type="text" class="contact__form-input" id="email">
                            <label for="email" class="contact__form-label ">Adres e-mail:</label>
                            <p class="contact__form-error"></p>
                        </div>
                        <div class="contact__form-box">
                            <textarea class="contact__form-textarea" id="msg"></textarea>
                            <label for="msg" class="contact__form-label ">Wiadomość:</label>
                            <p class="contact__form-error"></p>
                        </div>
                        <button class="contact__form-btn send btn-style">Wyślij</button>
                    </form>
                    <div class="contact__map">
                        <h3 class="contact__map-title title">Znajdziesz nas <i class="fa-solid fa-map-location-dot"></i>
                        </h3>
                        <div class="contact__map-location" id="map"></div>
                    </div>
                    <div class="popup">
                        <p>Formularz został poprawnie wysłany</p>
                        <button class="close btn-style">Zamknij</button>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- @includes 'footer.kit' -->

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
        integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    <script src="./dist/js/form.min.js"></script>
    <script src="./dist/js/main.min.js"></script>
</body>

</html>